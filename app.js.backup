const express = require('express');
const multer = require('multer');
const path = require('path');
const fs = require('fs');
const app = express();
const port = 8080;

// Serve static files from 'public'
app.use(express.static('public'));

// Set up storage for uploads
const storage = multer.diskStorage({
    destination: function (req, file, cb) {
        cb(null, 'uploads/');
    },
    filename: function (req, file, cb) {
        cb(null, Date.now() + path.extname(file.originalname));
    }
});
const upload = multer({ storage: storage });

// Route for the home page
app.get('/', (req, res) => {
    res.sendFile(path.join(__dirname, 'public', 'index.html'));
});

// Route to handle image upload
app.post('/upload', upload.single('image'), (req, res) => {
    res.send('<h1>Image uploaded successfully!</h1><a href="/">Upload another</a> | <a href="/images">View gallery</a>');
});

// Route to view uploaded images
app.get('/images', (req, res) => {
    fs.readdir('uploads/', (err, files) => {
        if (err) {
            return res.send('<h1>Error reading images</h1>');
        }
        let html = '<h1>Uploaded Golf Ball Photos</h1><ul style="list-style: none;">';
        files.forEach(file => {
            html += `<li><img src="/uploads/${file}" alt="Golf ball photo" width="300" style="margin: 10px;"></li>`;
        });
        html += '</ul><a href="/">Back to upload</a>';
        res.send(html);
    });
});

// Serve uploaded images statically
app.use('/uploads', express.static('uploads'));

// Start the server
app.listen(port, () => {
    console.log(`Server running on http://localhost:${port}`);
});
